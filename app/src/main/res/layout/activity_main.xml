<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:background="@android:color/black">


    <TextView
            android:id="@+id/txtResultado"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:text="0"
            android:textSize="64sp"
            android:textColor="@android:color/white"
            android:gravity="end|bottom"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtResultado"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="โซ"
                android:id="@+id/btnBorrar"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#595959"
                app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="AC"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#595959"
                app:cornerRadius="40dp" android:id="@+id/btnAC"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#595959"
                app:cornerRadius="40dp" android:id="@+id/btnPorcentaje"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="รท"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                app:cornerRadius="40dp" android:id="@+id/btnDividir"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn7"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn8"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/btn9"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="x"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                app:cornerRadius="40dp" android:id="@+id/btnMultiplicar"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn4"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn5"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn6"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                app:cornerRadius="40dp" android:id="@+id/btnRestar"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn1"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn2"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn3"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                app:cornerRadius="40dp" android:id="@+id/btnSumar"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+/-"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btnInverso"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp" android:id="@+id/btn0"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text=","
                android:id="@+id/btnPunto"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#2E2E2E"
                app:cornerRadius="40dp"/>

        <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/btnIgual"
                android:textSize="28sp"
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:backgroundTint="#FF9500"
                app:cornerRadius="40dp"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>